@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Areas/WebUI/Views/Shared/_Layout.cshtml";
}


<div class="block-space block-space--layout--after-header"></div>
<div class="block">
    <div class="container container--max--lg">
        <div class="row justify-content-center">
            <div class="col-md-6 d-flex">
                <div class="card flex-grow-1 mb-md-0 mr-0 mr-lg-3 ml-0 ml-lg-4">
                    <div class="card-body card-body--padding--2">
                        <h3 class="card-title">Giriş Yap</h3>
                        <form method="post">
                            <div class="form-group">
                                <label for="signin-email">Kullanıcı Adı</label>
                                <input id="signin-email" type="text" name="Username" class="form-control" placeholder="kullanıcı adı">
                            </div>
                            <div class="form-group">
                                <label for="signin-password">Parola</label>
                                <input id="signin-password" type="password" name="Password" class="form-control" placeholder="parola"> <small class="form-text text-muted"><a href="#">Şifremi Unuttum?</a></small>
                            </div>
                            <div class="form-group">
                                <div class="form-check">
                                    <span class="input-check form-check-input">
                                        <span class="input-check__body">
                                            <input class="input-check__input" type="checkbox" name="rememberme" id="RememberMe">
                                            <span class="input-check__box"></span>
                                            <span class="input-check__icon">
                                                <svg width="9px" height="7px">
                                                    <path d="M9,1.395L3.46,7L0,3.5L1.383,2.095L3.46,4.2L7.617,0L9,1.395Z" />
                                                </svg>
                                            </span>
                                        </span>
                                    </span>
                                    <label class="form-check-label" for="signin-remember">Beni Hatırla</label>
                                </div>
                            </div>
                            <div class="form-group mb-0">
                                <button type="submit" class="btn btn-primary mt-3">Giriş</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="block-space block-space--layout--before-footer"></div>

