@{
    Layout = "~/Areas/Management/Views/Shared/UserPage/_UserLayout.cshtml";
}

<div class="card-title-sign mt-3 text-end">
    <h2 class="title text-uppercase font-weight-bold m-0"><i class="bx bx-user-circle me-1 text-6 position-relative top-5"></i> Sign Up</h2>
</div>
<div class="card-body">
    <form>
        <div class="form-group mb-3">
            <label>Adınız</label>
            <input name="name" type="text" class="form-control form-control-lg" />
        </div>
        <div class="form-group mb-3">
            <label>Soyadınız</label>
            <input name="surname" type="text" class="form-control form-control-lg" />
        </div>
        <div class="form-group mb-3">
            <label>Cep Telefonu</label>
            <input data-plugin-masked-input="" data-input-mask="(999) 999-9999" placeholder="(123) 123-1234" class="form-control form-control-lg">
        </div>
        <div class="form-group mb-3">
            <label>E-mail Adresi</label>
            <input name="email" type="email" class="form-control form-control-lg" />
        </div>
        <div class="form-group mb-0">
            <div class="row">
                <div class="col-sm-6 mb-3">
                    <label>Şifre</label>
                    <input name="pwd" type="password" class="form-control form-control-lg" />
                </div>
                <div class="col-sm-6 mb-3">
                    <label>Şifre Onayla</label>
                    <input name="pwd_confirm" type="password" class="form-control form-control-lg" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-8">
                <div class="checkbox-custom checkbox-default">
                    <input id="AgreeTerms" name="agreeterms" type="checkbox" />
                    <label for="AgreeTerms">Kullanıcı sözleşmesini okudum ve<a href="#">onaylıyorum!</a></label>
                </div>
            </div>
            <div class="col-sm-4 text-right">
                <button type="submit" class="btn btn-primary mt-2">Üye Ol!</button>
            </div>
        </div>
        <span class="mt-3 mb-3 line-thru text-center text-uppercase">
            <span>veya</span>
        </span>
        <div class="mb-1 text-center">
            <a class="btn btn-google mb-3 ms-1 me-1" href="#">Google ile Bağlan <i class="fab fa-google-g"></i></a>
        </div>
        <p class="text-center">Bir hesaba sahip misiniz? <a href="@Url.Action("SignIn","User")">Giriş Yap!</a></p>
    </form>
</div>